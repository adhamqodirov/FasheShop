                                                        <a href="/News/Details/@item.ID" class="btn btn-primary" style="margin-bottom:5px">
                                                            <span class="glyphicon glyphicon-eye"></span> View
                                                        </a>

                                                        <a href="/News/Delete/@item.ID" class="btn btn-danger" style="margin-bottom:5px">
                                                            <span class="glyphicon glyphicon-trash"></span> Delete
                                                        </a>
     </td>
                                                </tr>
