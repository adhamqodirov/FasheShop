

    <!-- Title Page -->
    <section class="bg-title-page p-t-40 p-b-50 flex-col-c-m" style="background-image: url('@ViewBag.pageimages.path'); margin-top:80px">
        <h2 class="l-text2 t-center">
            @{
               string text = "";

                if (!FasheShop.Control.Status.isRu)
                {
                    text = " About";


                }
                else
                {
                    text = "О нас";
                }

            }
            @text
           
        </h2>
    </section>

    <!-- content page -->
    <section class="bgwhite p-t-66 p-b-38">
        <div class="container">
            <div class="row">
                <div class="col-md-4 p-b-30">
                    <div class="hov-img-zoom">
                        <img src="@ViewBag.a1.path" alt="IMG-ABOUT">
                    </div>
                </div>

                <div class="col-md-8 p-b-30">
                    <h3 class="m-text26 p-t-15 p-b-16">
                       
                        @{
                            text = "";

                            if (!FasheShop.Control.Status.isRu)
                            {
                                text = ViewBag.a1.name;


                            }
                            else
                            {
                                text = "Наша история";
                            }

                        }
                        @text
                    </h3>

                    <p class="p-b-28">
                        @{
                            text = "";

                            if (!FasheShop.Control.Status.isRu)
                            {
                                text = ViewBag.a1.fulldescription;


                            }
                            else
                            {
                                text = "Женский гардероб - это ее возможность выделиться и произвести неизгладимое первое впечатление. Запущенный в 2012 году, Impressions Online Boutique предлагает широкий ассортимент одежды, чтобы соответствовать уникальному чувству стиля любой женщины. Наша одежда и аксессуары тщательно подбираются, чтобы предоставить нашим клиентам новейшую моду.";
                            }

                        }
                        @text
                    </p>

                    <div class="bo13 p-l-29 m-l-9 p-b-10">
                        <p class="p-b-11">
                            @{
                                text = "";

                                if (!FasheShop.Control.Status.isRu)
                                {
                                    text = ViewBag.a1.description;


                                }
                                else
                                {
                                    text = "Творчество просто соединяет вещи.";
                                }

                            }
                            @text
                           
                        </p>

                        <span class="s-text7">
                            - @ViewBag.a1.newprice
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </section>


  