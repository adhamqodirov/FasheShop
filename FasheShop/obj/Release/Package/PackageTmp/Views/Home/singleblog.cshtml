
@{
    ViewBag.Title = "singleblog";
}


	<!-- breadcrumb -->
<div class="bread-crumb bgwhite flex-w p-l-52 p-r-15 p-t-30 p-l-15-sm">
    <a href="/home/index" class="s-text16">
        Home
        <i class="fa fa-angle-right m-l-8 m-r-9" aria-hidden="true"></i>
    </a>

    <a href="/home/blog/" class="s-text16">
        Blog
        <i class="fa fa-angle-right m-l-8 m-r-9" aria-hidden="true"></i>
    </a>

    <span class="s-text17">
        @ViewBag.news.Title
    </span>
</div>

<!-- content page -->
<section class="bgwhite p-t-60 p-b-25">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-12 p-b-80">
                <div class="p-r-50 p-r-0-lg">
                    <div class="p-b-40">
                        <div class="blog-detail-img wrap-pic-w">
                            <img src="@ViewBag.news.Picture" style="height: 700px;"alt="IMG-BLOG">
                        </div>

                        <div class="blog-detail-txt p-t-33">
                            <h4 class="p-b-11 m-text24">
                                @ViewBag.news.Title
                            </h4>

                            <div class="s-text8 flex-w flex-m p-b-21">
                                <span>
                                    By Admin
                                    <span class="m-l-3 m-r-6">|</span>
                                </span>

                                @*<span>
                                   @ViewBag.news.Date.Value.ToShortDateString()
                                    <span class="m-l-3 m-r-6">|</span>
                                </span>*@

                                @*<span>
                                    @ViewBag.news.
                                    <span class="m-l-3 m-r-6">|</span>
                                </span>*@

                                @*<span>
                                    8 Comments
                                </span>*@
                            </div>

                            <p class="p-b-25">
                                @ViewBag.news.Excerpt
                            </p>

                            <p class="p-b-25">
                                @ViewBag.news.Description
                            </p>
                        </div>

                        @*<div class="flex-m flex-w p-t-20">
                            <span class="s-text20 p-r-20">
                                Tags
                            </span>

                            <div class="wrap-tags flex-w">
                                <a href="#" class="tag-item">
                                    Streetstyle
                                </a>

                                <a href="#" class="tag-item">
                                    Crafts
                                </a>
                            </div>
                        </div>*@
                    </div>

                    <!-- Leave a comment -->

                    <form class="leave-comment" action="@Url.Action("singleblog","Home")" method="post">
                        <h4 class="m-text25 p-b-14">
                            Leave a Comment
                        </h4>

                        <p class="s-text8 p-b-40">
                            Your email address will not be published. Required fields are marked *
                        </p>

                        <textarea class="dis-block s-text7 size18 bo12 p-l-18 p-r-18 p-t-13 m-b-20" name="message" placeholder="Comment..."></textarea>

                        <input class="bo12 sizefull size19 s-text7 p-l-18 p-r-18" style="border: 1px solid #d9d9d9; border-radius: 3px;     margin-right: 15px;
    margin-bottom: 30px;"  type="text" name="name" placeholder="Name *">
                        <input class="bo12 sizefull size19 s-text7 p-l-18 p-r-18" style="    margin-right: 15px;
    margin-bottom: 30px; border: 1px solid #d9d9d9; border-radius: 3px;" type="text" name="email" placeholder="Email *">
                        <input class="bo12 sizefull  size19 s-text7 p-l-18 p-r-18" style="    margin-right: 15px;
    margin-bottom: 30px; border: 1px solid #d9d9d9; border-radius: 3px;" type="text" name="phonenumber" placeholder="PhoneNumber">

                        <div class="w-size24">
                            <!-- Button -->
                            <button class="flex-c-m size1 bg1 bo-rad-20 hov1 s-text1 trans-0-4">
                                Post Comment
                            </button>
                        </div>
                    </form>

                </div>
            </div>

         
        </div>
    </div>
</section>

