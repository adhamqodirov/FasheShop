    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<body>
    <div class="page">
        <!-- Main Navbar-->
        <header class="header">
            <nav class="navbar">
                <!-- Search Box-->
                <div class="search-box">
                    <button class="dismiss"><i class="icon-close"></i></button>
                    <form id="searchForm" action="#" role="search">
                        <input type="search" placeholder="What are you looking for..." class="form-control">
                    </form>
                </div>
                <div class="container-fluid">
                    <div class="navbar-holder d-flex align-items-center justify-content-between">
                        <!-- Navbar Header-->
                        <div class="navbar-header">
                            <!-- Navbar Brand --><a href="/home/index" class="navbar-brand d-none d-sm-inline-block">
                                <div class="brand-text d-none d-lg-inline-block"><span>Fashe </span><strong>Shop</strong></div>
                                <div class="brand-text d-none d-sm-inline-block d-lg-none"><strong>Fashe</strong></div>
                            </a>
                            <!-- Toggle Button--><a id="toggle-btn" href="#" class="menu-btn active"><span></span><span></span><span></span></a>
                        </div>
                        <!-- Navbar Menu -->
                        <ul class="nav-menu list-unstyled d-flex flex-md-row align-items-md-center">
                            <!-- Search-->
                            <li class="nav-item d-flex align-items-center"><a id="search" href="#"><i class="icon-search"></i></a></li>

                            <li class="nav-item"><a href="/admin/logout" class="nav-link logout"> <span class="d-none d-sm-inline">Logout</span><i class="fa fa-sign-out"></i></a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="page-content d-flex align-items-stretch">
            <!-- Side Navbar -->
            <nav class="side-navbar">
                <!-- Sidebar Header-->
                <div class="sidebar-header d-flex align-items-center">
                    <div class="avatar"><img src="~/Content/admin/distribution/img/avatar-8.jpg" alt="..." class="img-fluid rounded-circle"></div>
                    <div class="title">
                        <h1 class="h4">Elizabeth</h1>
                        <p>Web Designer</p>
                    </div>
                </div>
                <!-- Sidebar Navidation Menus--><span class="heading">Main</span>
                <ul class="list-unstyled">
                    <li><a href="/Admin/Index"> <i class="icon-home"></i>Home </a></li>


                    <li>
                        <a href="#exampledropdownDropdown3" aria-expanded="false" data-toggle="collapse"> <i class="icon icon-website"></i>News </a>
                        <ul id="exampledropdownDropdown3" class="collapse list-unstyled ">
                            <li><a href="/News/index">All News</a></li>
                            <li><a href="/News/create">Add Post</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#exampledropdownDropdown2" aria-expanded="false" data-toggle="collapse"> <i class="icon icon-list-1"></i>Orders </a>
                        <ul id="exampledropdownDropdown2" class="collapse list-unstyled ">
                            <li><a href="#">All Orders </a></li>
                            <li><a href="#">Add Order</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#exampledropdownDropdown" aria-expanded="false" data-toggle="collapse"> <i class="icon icon-page"></i>Products </a>
                        <ul id="exampledropdownDropdown" class="collapse list-unstyled ">
                            <li><a href="/Product/Index">All Product</a></li>
                            <li  class="active"><a href="/Product/Create">Add Product</a></li>
                        </ul>
                    </li>
                </ul><span class="heading">Extras</span>
                <ul class="list-unstyled">

                    <li> <a href="/Admin/Messages"> <i class="icon-mail"></i>Messages </a></li>
                    <li> <a href="/Admin/Options"> <i class="icon-grid"></i>Options </a></li>
                    <li> <a href="/Admin/export"> <i class="icon-form"></i>Export Import </a></li>
                   </ul>
            </nav>
            <div class="content-inner">
                <!-- Page Header-->
                <header class="page-header">
                    <div class="container-fluid">
                        <h2 class="no-margin-bottom">Products</h2>
                    </div>
                </header>


                <!-- Forms Section-->
                <section class="forms">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-close">
                                        <div class="dropdown">
                                            <button type="button" id="closeCard3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle"><i class="fa fa-ellipsis-v"></i></button>
                                            <div aria-labelledby="closeCard3" class="dropdown-menu dropdown-menu-right has-shadow"><a href="#" class="dropdown-item remove"> <i class="fa fa-times"></i>Close</a><a href="#" class="dropdown-item edit"> <i class="fa fa-gear"></i>Edit</a></div>
                                        </div>
                                    </div>
                             
                                    <div class="card-header d-flex align-items-center">
                                        <h3 class="h4">New Product Form</h3>
                                    </div>
                                    <div class="card-body">
                                        @if (ViewBag.flag == "1" || ViewBag.flag == "0")
                                        {
                                            <div class="col-md-12">


                                                <div class="x_content bs-example-popovers">
                                                    @{
                                                        if (ViewBag.flag == "1")
                                                        {
                                                            <div class="alert alert-success" role="alert" style="margin-top:10px">
                                                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                                    <span aria-hidden="true"><p style="color:black">×</p></span>
                                                                </button>
                                                                <strong>@ViewBag.mess</strong>
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <div class="alert alert-danger" role="alert" style="margin-top:10px">
                                                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                                    <span aria-hidden="true"><p style="color:black">×</p></span>
                                                                </button>
                                                                <strong>@ViewBag.mess</strong>
                                                            </div>
                                                        }
                                                    }

                                                </div>

                                            </div>
                                                        }

                                            <form class="form-horizontal"  action="@Url.Action("Create", "Product")" method="post" enctype = "multipart/form-data">

                                                <div class="col-lg-12">
                                                    <div class="row" style="margin-top:40px;">
                                                        <div class="col-sm-6">
                                                            <div class="form-group row">
                                                                <label class="col-sm-3 form-control-label">Product Name</label>
                                                                <div class="col-sm-9">
                                                                    <input type="text" name="name" required="required" class="form-control">
                                                                </div>
                                                            </div>


                                                            <div class="form-group row">
                                                                <label class="col-sm-3 form-control-label">Summary</label>
                                                                <div class="col-sm-9">
                                                                    <textarea class="form-control"  name="summary" required="required" rounded-0" id="exampleFormControlTextarea2" rows="3"></textarea>
                                                                </div>
                                                            </div>

                                                            <div class="form-group row">
                                                                <label class="col-sm-3 form-control-label">Price</label>
                                                                <div class="col-sm-9">
                                                                    <input type="text" name="price" required="required" class="form-control">
                                                                </div>
                                                            </div>
                                                       
                                             
                                                            <div class="form-group row">
                                                                <label class="col-sm-3 form-control-label">Sale</label>
                                                                <div class="col-sm-9">


                                                                    <div class="form-group">
                                                                        <div class="input-group">
                                                                            <div class="input-group-prepend">
                                                                                <div class="input-group-text">
                                                                                   
                                                                                    <input type="checkbox" value="True" name="statussale" class="checkbox-template">
                                                                                </div>
                                                                            </div>
                                                                            <input type="text" class="form-control" name="saleprice">
                                                                        </div>
                                                                    </div>

                                                                </div>
                                                            </div>



                                                            <div class="form-group row">
                                                                <label class="col-sm-3 form-control-label">Sale Day Count</label>
                                                                <div class="col-sm-9">
                                                                    <input type="text" class="form-control" name="saledate">
                                                                </div>

                                                            </div>

                                                            <div class="line"></div>
                                                            <div class="form-group row">
                                                                <label class="col-sm-3 form-control-label">Product Expired Date</label>
                                                                <div class="col-sm-9">
                                                                    <input type="date" class="form-control" name="expireddate">
                                                                </div>

                                                            </div>

                                                            <div class="form-group row">
                                                                <label class="col-sm-3 form-control-label">Arrival Time</label>
                                                                <div class="col-sm-9">
                                                                    <input type="date" class="form-control" name="arrivaldate">
                                                                </div>

                                                            </div>

                                                            <div class="form-group row">
                                                                <label class="col-sm-3 form-control-label">EN or RU ?</label>
                                                                <div class="col-sm-9">
                                                                    <input type="text" class="form-control" name="enru">
                                                                </div>

                                                            </div>

                                                          
                                                        </div>
                                                        <div class="col-sm-6">

                                                            <div class="form-group row">
                                                                <label class="col-sm-3 form-control-label">Category</label>
                                                                <div class="col-sm-9">
                                                                    <select class="form-control mb-3" name="catid">

                                                                        @{
                                                                            <option value="0">Choose</option>
                                                                            foreach (var item in ViewData["list"] as IEnumerable<FasheShop.Models.ProductCategory>)
                                                                            {

                                                                                <option value="@item.ID">@item.Name</option>


                                                                            }
                                                                        }

                                                                    </select>
                                                                </div>

                                                            </div>

                                                            <div class="form-group row">
                                                                <label for="check" class="col-sm-3 form-control-label">Featured ? </label>
                                                                <div class="col-sm-9">
                                                                    <div class="i-checks">
                                                                        <input id="featured" type="checkbox" value="True" name="featured" class="checkbox-template ">
                                                                        <label for="checkboxCustom1"> Special Product in Home Page</label>
                                                                    </div>
                                                                    </div>
                                                                </div>

                                                            <div class="form-group row">
                                                                <label for="fileInput" class="col-sm-3 form-control-label">Image</label>
                                                                <div class="col-sm-9">
                                                                    <input id="file" type="file" name="file" class="form-control-file" onchange="show(this)">
                                                                </div>

                                                                <div class="col-sm-3"></div>
                                                                <div class="col-sm-9">
                                                                    <img id="user_img"
                                                                         height="160"
                                                                         width="210"
                                                                         style="border:solid; margin-top:20px;" />
                                                                </div>

                                                            </div>


                                                            <script type="text/javascript">

                                                        function show(input) {
                                                            if (input.files && input.files[0]) {
                                                                var filerdr = new FileReader();
                                                                filerdr.onload = function (e) {
                                                                    $('#user_img').attr('src', e.target.result);
                                                                }
                                                                filerdr.readAsDataURL(input.files[0]);
                                                            }
                                                        }
                                                            </script>
                                                         
                                                        </div>
                                                    </div>
                                                   
                                                



                                                    <div class="line"></div>
                                                    <div class="form-group row">
                                                        <div class="col-sm-7 offset-sm-5">
                                                            <button type="submit" class="btn btn-secondary">Cancel</button>
                                                            <button type="submit" class="btn btn-primary">Save changes</button>
                                                        </div>
                                                    </div>
                                                </div>
                                           </form>

                                        
                                      

                                       
                                    </div>
                                </div>
                            </div>
                            <!-- Modal Form-->
                            
                        </div>
                    </div>
                </section>





                <!-- Page Footer-->
                <footer class="main-footer">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-sm-6">
                                <p>Your company &copy; 2019-2020</p>
                            </div>
                            <div class="col-sm-6 text-right">
                                <p>Powered by <a href="#" class="external">Yourname</a></p>
                                <!-- Please do not remove the backlink to us unless you support further theme's development at https://bootstrapious.com/donate. It is part of the license conditions. Thank you for understanding :)-->
                            </div>
                        </div>
                    </div>
                </footer>
            </div>

        </div>
    </div>
    <!-- JavaScript files-->
    <script src="~/Content/admin/distribution/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/admin/distribution/vendor/popper.js/umd/popper.min.js"> </script>
    <script src="~/Content/admin/distribution/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/admin/distribution/vendor/jquery.cookie/jquery.cookie.js"> </script>
    <script src="~/Content/admin/distribution/vendor/chart.js/Chart.min.js"></script>
    <script src="~/Content/admin/distribution/vendor/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/Content/admin/distribution/js/charts-home.js"></script>
    <!-- Main File-->
    <script src="~/Content/admin/distribution/js/front.js"></script>

</body>
</html>


