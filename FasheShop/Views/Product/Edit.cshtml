                                                                <div class="col-md-10">
                                                                    @Html.EditorFor(model => model.SaleTimeProduct, new { htmlAttributes = new { @class = "form-control" } })
                                                                    @Html.ValidationMessageFor(model => model.SaleTimeProduct, "", new { @class = "text-danger" })
                                                                </div>
                                                            </div>

                                                            <div class="form-group">
                                                                @Html.LabelFor(model => model.ExpiredDate, htmlAttributes: new { @class = "control-label col-md-4" })
                                                                <div class="col-md-10">
                                                                    @Html.EditorFor(model => model.ExpiredDate, new { htmlAttributes = new { @class = "form-control" } })
                                                                    @Html.ValidationMessageFor(model => model.ExpiredDate, "", new { @class = "text-danger" })
                                                                </div>
                                                            </div>

                                                      
                                                        </div>

                                                    </div>
                                                </div>





                                                <div class="line" style="margin-top:-20px;"></div>

                                                @using (Html.BeginForm())
                                                {
                                                   




                                                    <div class="form-group row">
                                                        <div class="col-sm-7 offset-sm-5">
                                                            <a href="/product/index" class="btn btn-secondary">Cancel</a>
                                                            <button type="submit"  style="margin-left:10px;" class="btn btn-success">Save </button>
                                                        </div>
                                                    </div>

                                                }
                                            </div>
                                        </form>





                                    </div>
                                </div>
                            </div>
                            <!-- Modal Form-->

                        </div>
